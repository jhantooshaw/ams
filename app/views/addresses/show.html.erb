<style type="text/css">
  .control-label{
    padding-top:0 !important;
  }
</style>
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <i class="fa fa-arrow-left" onclick="goBack();" style="cursor:pointer;"></i>
        Address Detail
      </header>


      <div class="panel-body">
        <div class="form-horizontal" style="width:100%;">            
          <div class="form-group">
            <label class="col-sm-2 control-label">Address</label>
            <div class="col-sm-6 ">
              <%= @address.address %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">City</label>
            <div class="col-sm-6 ">
              <%= @address.city %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">State</label>
            <div class="col-sm-6 ">
              <%= @address.state %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Country</label>
            <div class="col-sm-6 ">
              <%= @address.country %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Pin</label>
            <div class="col-sm-6 ">
              <%= @address.pin %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Other Info</label>
            <div class="col-sm-6 ">
              <%= @address.other_info %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>