<div class="row">
  <div class="col-lg-12">
    <h4 class="page-header"><i class="fa fa-file"></i> Contact Dashboard</h4>
    <%if flash[:notice] %>
      <ol class="breadcrumb">          				  	
        <div style="text-align:center;"><%= flash[:notice] %></div>
      </ol>
    <%end%>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <div style="float:right;margin-right:1%;padding:8px 0px;">         
        <a class="" href="/contacts/new"><i class="fa fa-plus-circle"></i> New Contact</a>
      </div>

      <table class="table table-striped table-advance table-hover">
        <tbody>
          <tr>
            <th><i class="icon_profile"></i> Name</th>
            <th><i class="icon_mail_alt"></i> Email</th>                
            <th><i class="icon_mobile"></i> Mobile 1</th>
            <th><i class="icon_mobile"></i> Mobile 2</th>
            <th><i class="icon_mobile"></i> Mobile 3</th>
            <th><i class="icon_cogs"></i> Action</th>
          </tr>

          <%@contacts.each do |contact|%>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.email %></td>                
              <td><%= contact.mobile_number_1 %></td>
              <td><%= contact.mobile_number_2 %></td>
              <td><%= contact.mobile_number_3 %></td>
              <td>
                <div class="btn-group">
                  <a class="btn btn-info" href="<%= contact_path(contact) %>" title="Show Contact"><i class="fa fa-eye"></i></a>
                  <a class="btn btn-success" href="<%= edit_contact_path(contact) %>" title="Edit Contact"><i class="fa fa-edit"></i></a>
                  <a class="btn btn-info" href="<%= new_contact_address_path(contact) %>" title="Add Address"><i class="icon_contacts_alt"></i></a>
                  <a class="btn btn-danger" href="<%= contact_path(contact)%>" data-method="DELETE" data-confirm="Are you sure?" title="Delete Contact"><i class="fa fa-trash-o"></i></a>
                </div>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>
      <div class="digg_pagination">            
        <%= will_paginate @posts, :container => false %>
      </div>
    </section>
  </div>
</div>