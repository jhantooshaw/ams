<style type="text/css">
  .control-label{
    //text-align:right;
    padding:8px 0px;
  }
</style>

<div class="row">
  <div class="col-lg-12">
    <h4 class="page-header"><i class="fa fa-money"></i> Fund Transfer Dashboard</h4>
    <%if flash[:notice] %>
      <ol class="breadcrumb">          				  	
        <div style="text-align:center;"><%= flash[:notice] %></div>
      </ol>
    <%end%>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <div class="col-sm-3 control-label" style="margin-left:8px;">Monthly Total Credit : &nbsp;&nbsp;
        <i class="fa fa-inr" aria-hidden="true"></i><b><%= FundTransfer.add_decimal_prefix(@tot_cr.total_amount) %></b>
      </div>
      <div class="col-sm-3 control-label">Monthly Total Debit : &nbsp;&nbsp;
        <i class="fa fa-inr" aria-hidden="true"></i><b><%= FundTransfer.add_decimal_prefix(@tot_dr.total_amount) %></b>
      </div>
      
      <div class="col-sm-2 control-label">Balance : &nbsp;&nbsp;
        <i class="fa fa-inr" aria-hidden="true"></i><b><%= FundTransfer.add_decimal_prefix(@tot_cr.total_amount - @tot_dr.total_amount) %></b>
      </div>
      
      <div style="float:right;margin-right:1%;padding:8px 0px;">         
        <a class="" href="<%= new_fund_transfer_path %>"><i class="fa fa-plus-circle"></i> New Fund Transfer</a>
      </div>

      <table class="table table-striped table-advance table-hover">
        <tbody>
          <tr>
            <th><i class="fa fa-user"></i> Name</th>
            <th><i class="fa fa-clock-o"></i> Transaction Date</th>
            <th><i class=""></i> Transaction Number</th>
            <th><i class="fa fa-arrow-down "></i> Credit</th>
            <th><i class="fa fa-arrow-up "></i> Debit</th>
            <th><i class="icon_cogs"></i> Action</th>
          </tr>

          <%@fts.each do |ft|%>
            <tr>
              <td><%= ft.transfer_to %></td>
              <td><%= ft.ist_time_format %></td>
              <td><%= ft.transaction_number %></td>
              <td><%= ft.credit_amount %></td>
              <td><%= ft.debit_amount %></td>
              <td>
                <div class="btn-group">
                  <a class="btn btn-info" href="<%= fund_transfer_path(ft) %>" title="Show Transfer"><i class="fa fa-eye"></i></a>
                  <a class="btn btn-success" href="<%= edit_fund_transfer_path(ft) %>" title="Edit Transfer"><i class="fa fa-edit"></i></a>
                  <a class="btn btn-danger" href="<%= fund_transfer_path(ft)%>" data-method="DELETE" data-confirm="Are you sure?" title="Delete Transfer"><i class="fa fa-trash-o"></i></a>
                </div>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>
      <div class="digg_pagination">            
        <%= will_paginate @fts, :container => false %>
      </div>
    </section>
  </div>
</div>