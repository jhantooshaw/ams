<style type="text/css">
  .control-label{
    padding-top:0 !important;
  }
</style>
<div class="row">
  <div class="col-lg-12">
    <%if flash[:notice] %>
      <ol class="breadcrumb">          				  	
        <div style="text-align:center;"><%= flash[:notice] %></div>
      </ol>
    <%end%>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <i class="fa fa-arrow-left" onclick="goBack();" style="cursor:pointer;"></i>
        Fund Transfer Detail
      </header>

      <div class="panel-body">
        <div class="form-horizontal" style="width:100%;">            
          <div class="form-group">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-6 ">
              <%= @ft.transfer_to %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Transaction Date</label>
            <div class="col-sm-6 ">
              <%= @ft.ist_time_format %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Transaction Number</label>
            <div class="col-sm-6 ">
              <%= @ft.transaction_number %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Asset Type</label>
            <div class="col-sm-6 ">
              <%= FundTransfer::AssetType.detect{|u| u[1] == @ft.asset_type }.first  %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Amount</label>
            <div class="col-sm-6 ">
              <%= sprintf('%.2f', @ft.amount) %>
            </div>
          </div>

          
        </div>
      </div>
    </section>
  </div>
</div>